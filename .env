# API配置
API_HOST=0.0.0.0
API_PORT=8010
DEBUG=True

# MCP Server配置
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8011

# LLM API密钥
GEMINI_API_KEY=your_qwen_api_key
QWEN_API_KEY=your_qwen_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key

# 默认LLM提供商
